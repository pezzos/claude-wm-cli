{
  "cleanupPeriodDays": 5,
  "enableAllProjectMcpServers": true,
  "env": {
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "true",
    "DISABLE_BUG_COMMAND": "true",
    "DISABLE_ERROR_REPORTING": "true",
    "DISABLE_TELEMETRY": "true"
  },
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "command": "~/.claude/hooks/smart-notify.sh question-waiting",
            "type": "command"
          }
        ],
        "matcher": ""
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "command": "~/.claude/hooks/commands/tools/post-write-json-validator-simple.sh",
            "type": "command"
          }
        ],
        "matcher": "Write"
      },
      {
        "hooks": [
          {
            "command": "~/.claude/hooks/parallel-hook-runner.sh PostToolUse",
            "type": "command"
          }
        ],
        "matcher": ""
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "command": "~/.claude/hooks/parallel-hook-runner.sh Bash",
            "type": "command"
          }
        ],
        "matcher": "Bash"
      },
      {
        "hooks": [
          {
            "command": "~/.claude/hooks/parallel-hook-runner.sh Write",
            "type": "command"
          }
        ],
        "matcher": "Write"
      },
      {
        "hooks": [
          {
            "command": "~/.claude/hooks/parallel-hook-runner.sh Write_Edit_MultiEdit",
            "type": "command"
          }
        ],
        "matcher": "Write_Edit_MultiEdit"
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "command": "~/.claude/hooks/obsolete-file-detector.sh",
            "type": "command"
          }
        ],
        "matcher": ""
      }
    ]
  },
  "model": "sonnet",
  "permissions": {
    "allow": [
      "Bash(~/.claude/hooks/smart-notify.sh:*)",
      "Bash(cat:*)",
      "Bash(cd:*)",
      "Bash(chmod:*)",
      "Bash(claude mcp:*)",
      "Bash(curl *)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(git *)",
      "Bash(go *)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(ln:*)",
      "Bash(ls:*)",
      "Bash(make:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(node:*)",
      "Bash(npm *)",
      "Bash(npx *)",
      "Bash(pip *)",
      "Bash(pip3 *)",
      "Bash(pnpm *)",
      "Bash(python *)",
      "Bash(python3 *)",
      "Bash(pwd:*)",
      "Bash(rm:*)",
      "Bash(sleep:*)",
      "Bash(tail:*)",
      "Bash(touch:*)",
      "Bash(wc:*)",
      "Bash(xargs:*)",
      "Bash(yarn *)",
      "Edit(*)",
      "Glob(*)",
      "Grep(*)",
      "LS(*)",
      "mcp__consult7__consultation",
      "mcp__context7__*",
      "mcp__github__push_files",
      "mcp__github__create_pull_request",
      "mcp__mem0__*",
      "mcp__playwright__*",
      "mcp__puppeteer__puppeteer__*",
      "mcp__sequential-thinking__sequentialthinking",
      "mcp__time__*",
      "MultiEdit(*)",
      "Read(*)",
      "Task",
      "TodoRead",
      "TodoWrite",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:stackoverflow.com)",
      "WebFetch(domain:developer.mozilla.org)",
      "WebFetch(domain:reactjs.org)",
      "WebFetch(domain:nodejs.org)",
      "WebFetch(domain:npmjs.com)",
      "WebFetch(domain:tailwindcss.com)",
      "Write(*)"
    ],
    "allowed_tools": [
      "*"
    ],
    "defaultMode": "bypassPermissions",
    "deny": []
  },
  "version": "1.0.0"
}